        <div id="9" style="width: 20%;" onclick="getClickID(this.id)">a</div>
        <div id="10" style="width: 20%;" onclick="getClickID(this.id)">a</div>
        <div id="11" style="width: 20%;" onclick="getClickID(this.id)">a</div>
        <div id="12" style="width: 20%;" onclick="getClickID(this.id)">a</div>

        <div id="13" style="width: 20%;" onclick="getClickID(this.id)">a</div>
        <div id="14" style="width: 20%;" onclick="getClickID(this.id)">a</div>
        <div id="15" style="width: 20%;" onclick="getClickID(this.id)">a</div>
        <div id="16" style="width: 20%;" onclick="getClickID(this.id)">a</div>
    </div>

    <div id="button">
        <input type="submit" id="submit" onclick="tryit()">
    </div>


    <div id="finalPage">

        <input type="submit" id="endingthegame" value="View Scores">
    </div>

    <div id="final1">
        <p id="finalScores1"></p>
    </div>

    <div id="final2">
        <p id="finalScores2"></p>
    </div>

    <div>
        <p id="start"></p>
    </div>


    <p id="print"></p>
</body>
