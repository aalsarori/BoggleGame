@page
@*    <!DOCTYPE html>*@
@model IndexModel


<head>
    <title>Boggle</title>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/css/bogger.css">
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script type="text/javascript" defer src="~/js/chat.js"></script>
    <script type="text/javascript" defer src="~/js/bogger.js"></script>
</head>

<body>


    <div id="enterUsername1">
        <p>Enter a username to start: <br /></p>

    </div>


    <div id="enterUsername">

        <input id="username" type="text" value="Player1" />
        <input id="submitUser" type="submit" value="Enter" />
    </div>

    <h3 id="winner">Winner will be displayed here!</h3>

    <div class="scoresContainer">
        <div id="scores1">
            <p id="user1">User: </p>

            <br>
            <p id="score1">Score: </p>

        </div>

        <div id="scores2">
            <p id="user2">User: </p>
            <br>
            <p id="score2">Score: </p>

        </div>
    </div>

    <div id="timer">
        <span id="secs">01:00</span>
        <input type="button" id="startButton" value="start game">
    </div>

    <div id="container">
        <div id="1" style="width: 20%;" onclick="getClickID(this.id)">a</div>
        <div id="2" style="width: 20%;" onclick="getClickID(this.id)">a</div>
        <div id="3" style="width: 20%;" onclick="getClickID(this.id)">a</div>
